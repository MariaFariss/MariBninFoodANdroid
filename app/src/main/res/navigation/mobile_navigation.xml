<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.maribninfood.ui.home.HomeFragment"
        android:label="@string/title_home"
        tools:layout="@layout/fragment_home" />

    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.maribninfood.ui.account.AccountFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/navigation_addRecipes"
        android:name="com.example.maribninfood.ui.addRecipes.addRecipesFragement"
        android:label="@string/title_addRecipes"
        tools:layout="@layout/fragment_add_recipes_fragement" />

    <fragment
        android:id="@+id/navigation_editPofile"
        android:name="com.example.maribninfood.editUserFragment"
        android:label="@string/title_account"
        tools:layout="@layout/fragment_edit_user" />

    <fragment
        android:id="@+id/navigation_notifications"
        android:name="com.example.maribninfood.ui.bookmarks.BookmarksFragment"
        android:label="@string/title_bookmarks"
        tools:layout="@layout/fragment_bookmarks" />
